<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_purple</item>
        <item name="colorPrimaryDark">@color/theme_purple</item>
        <item name="colorAccent">@color/theme_purple</item>
    </style>
    <style name="textStyle">
        <item name="android:background">@drawable/my_rect_shape</item>
        <item name="android:textColor">@color/theme_white</item>
        <item name="android:layout_margin">24dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">8dp</item>

    </style>
    <style name="buttonStyle">
        <item name="android:padding">2dp</item>
        <item name="android:background">@drawable/my_rect_shape</item>
        <item name="android:textColor">@color/theme_white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>
